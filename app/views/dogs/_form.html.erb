<%= form_with url: dogs_path, id: 'dogs_form' do |form| %>
  <div class="mb-4">
    <%= form.label :breed, "Enter Dog Breed", class: "" %>
    <%= form.text_field :breed, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight", required: true %>
  </div>
  <div class="flex items-center justify-between">
    <%= form.submit "Fetch", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer", id: 'fetch_button' %>
  </div>
<% end %>
